<div class="container">
  <!--Jumbotron-->
  <div class="jumbotron text-left pl-5 bg-dark text-white">
    <h1 id="app-title">EAT DA BURGER</h1>
    <p class="lead">CREATE A BURGER AND ENJOY!</p>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card border border-warning">
        <!--Create/add burger form-->
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="burger">Create a burger order here:</label>
              <input type="text" class="form-control" id="burgerToGo" placeholder="">
            </div>
            <button class="btn btn-warning" id="submit" type="submit">Prepare for consumption</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <div class="row mt-4">
    <div class="col-md-6 mt-4">
      <div class="card border border-success">
        <div class="card-header bg-success text-white text-center">
         BURGERS
        </div>
        <!--Div to hold burgers that have not been devoured yet-->
        <div class="card-body">
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block devour=false}}
                {{/unless}}
              {{/each}}
        </div>
      </div>
    </div>

    <div class="col-md-6 mt-4">
      <div class="card border border-danger devoured-card">
        <div class="card-header bg-danger text-white text-center" id="devoured-card-header">
         DEVOURED BURGERS
        </div>
        <!--When a burger has been devoured, put burger here-->
        <div class="card-body">
          {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-devoured devour=true}}
              {{/if}}
          {{/each}}
        </div>
      </div>
    </div>

</div>

  <!--Footer-->
  <div class="container card-body col-md-12 mt-5 mb-5 pb-1 text-center">
