<div class="container">
  <!--Jumbotron-->
  <div class="jumbotron text-left pl-5 bg-dark text-white">
    <h1 class="display-4" id="app-title">Eat Da Burger</h1>
    {{!-- <h1 class="display-4" id="app-title">Awesome Burger <img src="/assets/img/cheeseburger.png"></h1> --}}
    <p class="lead">Insert a burger down below and enjoy!</p>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card border border-warning">
        {{!-- <div class="card-header bg-primary text-white">
         Yummy Yummy...
        </div> --}}
        <!--Create/add burger form-->
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="burger">Place burger order here:</label>
              <input type="text" class="form-control" id="burgerToGo" placeholder="">
            </div>
            <button class="btn btn-warning" type="submit">Prepare for consumption</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <div class="row mt-4">
    <div class="col-md-6 mt-4">
      <div class="card border border-info">
        <div class="card-header bg-info text-white text-center">
         Burgers
        </div>
        <!--Div to hold burgers that have not been devoured yet-->
        <div class="card-body">
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block devour=false}}
                {{/unless}}
              {{/each}}
        </div>
      </div>
    </div>

    <div class="col-md-6 mt-4">
      <div class="card border border-danger devoured-card">
        <div class="card-header bg-danger text-white text-center" id="devoured-card-header">
         Devoured burgers
        </div>
        <!--When a burger has been devoured, put burger here-->
        <div class="card-body">
          {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-devoured devour=true}}
              {{/if}}
          {{/each}}
        </div>
      </div>
    </div>

</div>

  <!--Footer-->
  <div class="container col-md-12">
    <a href="https://github.com/nlserrano/burger" class="btn btn-primary mr-2" target="_blank">GitHub Repo</a>
    <a href="https://www.linkedin.com/in/nathan-serrano-0a6899156/" class="btn btn-primary" target="_blank">LinkedIn</a>
  </div>
  
  <div class="card-header bg-success">
    Featured
  </div>
  <div class="card-body">
    <h5 class="card-title">Special title treatment</h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
  <div class="card-footer text-muted">
    2 days ago
  </div>